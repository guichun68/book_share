<resources>
    <style name="title_bar_style">
        <item name="android:background">@drawable/title_background_blue</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/common_black_color</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MyThemeBlue">
        <!-- Customize your theme here. -->
    </style>

    <!-- 定义一个属性 -->
    <attr name="duration"/>
    <!-- 定义一个styleable对象来组合多个属性 -->
    <declare-styleable name="AlphaImageView">
        <attr name="duration"/>
    </declare-styleable>


    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="MyProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">#EF7C7C</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>
    <style name="bookDetailStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>

        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:drawableLeft">@drawable/shape_oval</item>
    </style>
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="title_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_bg</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="item_menu_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/slide_item_sel</item>
    </style>


    <color name="text_bg">#CDD1D3</color>
    <color name="main_blue_light">#3F56B5</color>
    <color name="bar_color">#A103A9F4</color>
    <color name="qian_garly">#DCDCDC</color>
    <color name="blue">#ff4455db</color>


    <!-- 蓝色为主色调 -->
    <style name="MyThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">

        <!--选中状态icon的颜色和字体颜色-->
        <item name="colorPrimary">@color/main_blue_light</item>
        <item name="colorPrimaryDark">@color/bar_color</item>
        <item name="colorAccent">@color/main_blue_light</item>
        <!--正常状态下字体颜色和icon颜色-->
       <!-- <item name="android:textColorPrimary">@color/white</item>-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- toolbar（actionbar）颜色 -->
        <!-- 窗口的背景颜色 -->

    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray_white</item>
    </style>

    <style name="star">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">*</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- DrawerArrowStyle -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="graly_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@color/qian_garly</item>
    </style>
    <style name="select_photo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="AnimBottom2" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/fl_push_bottom_out</item>
        <item name="android:windowExitAnimation">@anim/fl_push_bottom_in</item>
    </style>
</resources>
