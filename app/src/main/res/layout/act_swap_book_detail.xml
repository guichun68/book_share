<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bacgroud"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交换发起人:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_light"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/tv_swapper"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_sel"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                tool:text="阿拉蕾蕾蕾"/>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                style="@style/line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="当前拥有的书:"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_book_image"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_margin="12dp"
                    android:layout_weight="2"
                    android:src="@mipmap/defaultcover" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_book_title"
                        style="@style/bookDetailStyle"
                        tool:text="大话设计模式" />

                    <TextView
                        android:id="@+id/tv_book_author"
                        style="@style/bookDetailStyle"
                        tool:text="程杰" />

                    <TextView
                        android:id="@+id/tv_book_type"
                        style="@style/bookDetailStyle"
                        tool:text="普通书籍" />

                    <TextView
                        android:id="@+id/tv_book_publisher"
                        style="@style/bookDetailStyle"
                        tool:text="清华大学出版社北京分" />

                    <TextView
                        android:id="@+id/tv_book_publish_date"
                        style="@style/bookDetailStyle"
                        tool:text="2014-02-25" />



                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_author_intro_tip"
                style="@style/bookDetailStyle"
                android:layout_marginLeft="12dp"
                android:text="作者简介：" />

            <TextView
                android:id="@+id/tv_author_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:visibility="visible"
                tool:text="秦小波 资深软件开发工程师、系统分析师和架构师（获Sun架构师认证），从事软件开发工作10余年，实践经验极其丰富。精通设计模式，对设计模式有深刻的认识和独到见解，而且创造性地提出了自己在大量实践中总结出来的新的设计模式。资深Java技术专家，精通Java语言、Spring、Struts 2、Hibernate、iBatis、jBPM等Java技术，广受读者好评！" />

            <TextView
                style="@style/bookDetailStyle"
                android:layout_marginLeft="12dp"
                android:text="图书简介：" />

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:visibility="visible"
                tool:text="本书可以绘制矩形环形以及椭圆，所以只需要用椭圆即可，在使用的时候将控件比如imageview或textview的高宽设置成一样就是正圆，solid表示远的填充色，stroke则代表远的边框线，所以两者结合可以实现带边缘的圆，当然也可以直接加上size控制高宽，下面的代码实现效果是一个带白边的红圆。" />

            <View
                android:layout_marginTop="10dp"
                style="@style/line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="想要交换的书:"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_swap_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/shape_oval"
                tool:text="书名：《三毛不在撒哈拉》"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_swap_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/shape_oval"
                tool:text="作者：嘉倩" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/shape_oval"
                android:text="交换说明：" />

            <TextView
                android:id="@+id/tv_swap_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="10dp"
                tool:text="非常喜欢这本书，如果你手头有这本书并且愿意交换的话，我们可以交换。当然也可以买"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>