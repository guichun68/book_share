<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@mipmap/bg2">

                <zyzx.linke.views.CircleImageView
                    android:id="@+id/civ"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/person"
                    android:layout_marginBottom="10dp"
                    app:border_color="@color/cicleHead" />

                <TextView
                    android:id="@+id/tv_user_login_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/civ"
                    android:layout_centerHorizontal="true"
                    tool:text="王者风范"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_signature"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    tool:text="写点什么吧！"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/item_press"
                    android:gravity="center"
                    android:maxLines="1"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:layout_below="@id/tv_user_login_name"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/gray_white"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/newbookcheckin"
                 />


            <RelativeLayout
                android:id="@+id/rl_scan_input"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_aboutmore_selector"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/launcher_icon" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv1"
                    android:text="@string/scan_input"
                    android:textSize="@dimen/sp_19"
                    android:textColor="#576168" />

                <ImageView
                    android:id="@+id/imageview_jiantou1"
                    style="@style/rightArrow"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/fenge1"
                style="@style/fengexian"
                android:layout_below="@id/rl_scan_input" />

            <RelativeLayout
                android:id="@+id/rl_manual_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_aboutmore_selector"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv2"
                    android:text="@string/manual_input"
                    android:textSize="@dimen/sp_19"
                    android:textColor="#576168" />

                <ImageView
                    android:id="@+id/imageview_jiantou2"
                    style="@style/rightArrow"/>
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/gray_white"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/manage_book"
                 />

            <RelativeLayout
                android:id="@+id/rl_all_checkin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_aboutmore_selector"
                android:paddingBottom="@dimen/dp_6"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <ImageView
                    android:id="@+id/iv0"
                    android:layout_width="50dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/borrow_book_all" />

                <TextView
                    android:id="@+id/tv0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv0"
                    android:text="@string/all_my_book"
                    android:textSize="@dimen/sp_19"
                    android:textColor="#576168" />

                <ImageView
                    android:id="@+id/imageview_jiantou0"
                    style="@style/rightArrow"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/fenge2"
                style="@style/fengexian"
                android:layout_below="@id/rl_scan_input" />

            <RelativeLayout
                android:id="@+id/rl_borrow_in"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_aboutmore_selector"
                android:paddingBottom="@dimen/dp_6"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="50dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/borrow_book_in" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv3"
                    android:text="@string/borrow_in"
                    android:textSize="@dimen/sp_19"
                    android:textColor="#576168" />

                <ImageView
                    android:id="@+id/imageview_jiantou3"
                    style="@style/rightArrow"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/fenge3"
                style="@style/fengexian"
                android:layout_below="@id/rl_scan_input" />

            <TextView
                android:id="@+id/tv_set_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/gray_white"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/setting"
                />

            <RelativeLayout
                android:id="@+id/rl_log_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_aboutmore_selector"
                android:paddingBottom="@dimen/dp_6"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="50dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/logout" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/iv4"
                    android:textSize="@dimen/sp_19"
                    android:text="@string/logout"
                    android:textColor="#576168" />

                <ImageView
                    android:id="@+id/imageview_jiantou4"
                    style="@style/rightArrow"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/fenge4"
                style="@style/fengexian"
                android:layout_below="@id/rl_scan_input" />

            <RelativeLayout
                android:id="@+id/rl_check_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_aboutmore_selector"
                android:paddingBottom="@dimen/dp_6"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="50dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/update" />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/iv5"
                    android:textSize="@dimen/sp_19"
                    android:text="@string/update"
                    android:textColor="#576168" />

                <ImageView
                    android:id="@+id/imageview_jiantou5"
                    style="@style/rightArrow"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>