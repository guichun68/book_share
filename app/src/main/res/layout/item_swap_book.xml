<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginBottom="2dp"
    android:background="@drawable/bg_selector"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/defaultcover"
        android:paddingBottom="2dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_have_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/have"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/backgroud_black"
            tool:text="历史深处的民国" />

        <TextView
            android:id="@+id/tv_have_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tool:text="作者：江城"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/backgroud_black"
            android:drawableLeft="@mipmap/have"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_want_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tool:text="三毛流浪记"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/backgroud_black"
            android:drawablePadding="5dp"
            android:layout_marginBottom="3dp"
            android:drawableLeft="@mipmap/want"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_want_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tool:text="作者：三毛"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:textColor="@color/backgroud_black"
            android:maxLines="1"
            android:singleLine="true"
            android:textStyle="bold"
            android:ellipsize="end"
            android:drawableLeft="@mipmap/want"
            android:textSize="16sp"/>


    </LinearLayout>

</LinearLayout>