<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bacgroud"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />


    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#88ffffff"
        android:visibility="visible">

        <zyzx.linke.views.CircleImageView
            android:id="@+id/civ"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/person"
            app:border_color="@android:color/transparent" />

        <RelativeLayout
            android:id="@+id/rl_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/civ">

            <TextView
                android:id="@+id/tv_user_login_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_tip_color"
                android:textSize="17sp"
                tool:text="王者风范" />

            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/tv_user_login_name"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/tv_user_login_name"
                tool:src="@mipmap/dannsei" />


        </RelativeLayout>


        <TextView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_sel_color"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:clickable="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_below="@id/rl_username"
            android:layout_centerHorizontal="true"
            android:text="我的资料"/>


    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextAppearance="@android:style/TextAppearance.Holo.Medium.Inverse"
        android:background="@color/watermark_hint"
        app:tabSelectedTextColor="@color/bg_gray2"
        app:tabIndicatorColor="@color/darkYellow"
        app:tabTextColor="@color/common_black_color2"
        app:tabGravity="fill"
        app:tabMode="fixed"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</LinearLayout>