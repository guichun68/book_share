<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include layout="@layout/title_bar"
        android:visibility="gone"/>

    <include
        android:id="@+id/routemap_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        layout="@layout/header_white" />

    <com.amap.api.maps.MapView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@id/routemap_title" />



    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="42.5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/temp_title"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_general_proj"
        android:visibility="gone" >

        <Button
            android:id="@+id/road_condition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/road_condition_off"
            android:clickable="true" >
        </Button>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="42.5dp"
        android:layout_above="@+id/bottom_layout"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/bg_general_proj"
        android:visibility="gone" >

        <Button
            android:id="@+id/location_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/location_off"
            android:clickable="true" >
        </Button>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_above="@+id/bottom_layout"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_general_proj"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/add_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/add"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/add_status"
                    android:clickable="true" >
                </Button>
            </RelativeLayout>

            <View
                android:layout_width="23dp"
                android:layout_height="2dp"
                android:background="@color/line" />

            <RelativeLayout
                android:id="@+id/minus_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/minus"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/minus_status"
                    android:clickable="true" >
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom_bar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:text="用户:"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/poi_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            tool:text="看我七十二变 "
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_tip"
            android:textColor="@color/Calendar_DayBgColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/poi_address"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/poi_name"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/poi_name"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/poi_detail"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/detail"
                android:textColor="@color/blue_cloud_scheme"
                android:textSize="14sp" />

            <Button
                android:layout_width="7dp"
                android:layout_height="13dp"
                android:layout_marginLeft="4dp"
                android:background="@mipmap/arrow_right_blue" />
        </LinearLayout>
    </RelativeLayout>


        <Button
            android:id="@+id/btn_next_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="72dp"
            android:text="下一页"/>

</RelativeLayout>