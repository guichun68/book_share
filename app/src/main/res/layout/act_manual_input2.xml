<?xml version="1.0" encoding="utf-8"?>
<!-- 个人手写资料录入 页-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_munual"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/inputBook">

                <TextView
                    android:id="@+id/tv_book_classify_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_classify"
                    android:layout_gravity="center_vertical"
                    android:textSize="19sp" />

                <TextView style="@style/star"
                    android:visibility="visible"
                    android:gravity="center_vertical"
                    />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/sp_book_classify"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:maxLength="80"
                    android:maxLines="1"
                    android:paddingRight="10dp" />

            </LinearLayout>

            <LinearLayout
                style="@style/inputBook">

                <TextView
                    android:id="@+id/tv_book_name_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/material_title"
                    android:textSize="19sp" />

                <TextView style="@style/star"
                    android:visibility="visible"
                    android:gravity="center_vertical"/>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/acet_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:maxLength="80"
                    android:maxLines="1"
                    android:paddingRight="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/watermark_hint"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="简介"
                    android:textSize="19sp" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/acet_intro"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    
                    android:maxLines="30"
                    android:paddingRight="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/watermark_hint"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="添加图片"
                    android:gravity="center_vertical"
                    android:textSize="19sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/aciv_cover"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@mipmap/memo"/>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>
</LinearLayout>