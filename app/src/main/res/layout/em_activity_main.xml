<?xml version="1.0" encoding="utf-8"?>
<!-- 注意：本布局为单词中心和樱花单词和樱花语法页共用 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <include
        android:id="@+id/title_bar2"
        layout="@layout/title_bar"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:background="@drawable/sel_click_btn_login"
        app:tabIndicatorColor="@color/indicator_color"
        app:tabTextColor="@color/tran_white"
        app:tabSelectedTextColor="@color/white"
        android:layout_below="@id/title_bar2"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_tabvp"
        android:layout_below="@id/tl_tablayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



</RelativeLayout>