<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@drawable/bg_allyuanjiao"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!-- 只有文字和一个按钮 -->

    <TextView
        android:id="@+id/dialog_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:gravity="center"
        android:maxLines="3"
        android:ellipsize="end"
        tool:text="确定要添加《你好的我的dadadafd士大夫撒都是垃圾范德萨对了撒就范德萨范德萨疯掉了卡萨解放东路撒酒疯大是咖啡的三的》这本书么？"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

    <Button
        android:id="@+id/dialog_btn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="30dip"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_sel"
        android:text="@string/confirm"
        android:visibility="visible"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
    <Button
        android:id="@+id/dialog_btn2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:visibility="visible"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/btn_sel"
        android:text="@string/cancel"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>